{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "routes": [
    {
      "src": "/api/system-stats",
      "dest": "/api/index"
    },
    {
      "src": "/api/auth/profile",
      "dest": "/api/auth/login"
    },
    {
      "src": "/api/festivals/([0-9]+)/stats",
      "dest": "/api/index?id=$1"
    },
    {
      "src": "/api/festivals/([0-9]+)",
      "dest": "/api/index?id=$1"
    },
    {
      "src": "/api/festivals",
      "dest": "/api/index"
    },
    {
      "src": "/api/artists/([0-9]+)",
      "dest": "/api/index?id=$1"
    },
    {
      "src": "/api/artists",
      "dest": "/api/index"
    },
    {
      "src": "/api/stages-areas/([0-9]+)",
      "dest": "/api/stages-areas?id=$1"
    },
    {
      "src": "/api/schedule/performance/([0-9]+)",
      "dest": "/api/schedule"
    },
    {
      "src": "/api/schedule/performance",
      "dest": "/api/schedule"
    },
    {
      "src": "/api/schedule/grid/(.*)",
      "dest": "/api/schedule"
    },
    {
      "src": "/api/budget",
      "dest": "/api/schedule"
    },
    {
      "src": "/api/volunteers",
      "dest": "/api/vendors"
    },
    {
      "src": "/api/contracts/templates/([0-9]+)",
      "dest": "/api/contracts"
    },
    {
      "src": "/api/contracts/templates",
      "dest": "/api/contracts"
    },
    {
      "src": "/api/volunteer-applications/([0-9]+)/(approve|decline)",
      "dest": "/api/volunteer-applications"
    },
    {
      "src": "/api/volunteer-applications/([0-9]+)",
      "dest": "/api/volunteer-applications"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}