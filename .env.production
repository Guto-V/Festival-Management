# Festival Management System - Production Environment
# Copy these variables to your Vercel environment settings

# =================================================================
# CORE CONFIGURATION
# =================================================================
NODE_ENV=production
PORT=3001

# =================================================================
# DATABASE CONFIGURATION (Supabase)
# =================================================================
# Replace with your Supabase database URL
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DB_MAX_CONNECTIONS=20

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# IMPORTANT: Change this to a secure random string
JWT_SECRET=your-super-secure-production-jwt-key-change-this-now
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate limiting for production
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# =================================================================
# CORS CONFIGURATION
# =================================================================
# Replace with your Vercel domain
CORS_ORIGIN=https://your-festival-app.vercel.app

# =================================================================
# EMAIL CONFIGURATION
# =================================================================
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@your-festival.com
EMAIL_FROM_NAME=Festival Management System

# =================================================================
# FILE STORAGE CONFIGURATION (Supabase Storage)
# =================================================================
STORAGE_TYPE=supabase
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
STORAGE_BUCKET=festival-documents

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
LOG_LEVEL=warn
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =================================================================
# FEATURE FLAGS
# =================================================================
ENABLE_CONTRACT_SIGNING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
MAX_UPLOAD_SIZE=10485760

# =================================================================
# PRODUCTION SPECIFIC
# =================================================================
FRONTEND_URL=https://your-festival-app.vercel.app
HEALTH_CHECK_TIMEOUT=10000

# =================================================================
# SUPABASE SPECIFIC
# =================================================================
SUPABASE_DB_PASSWORD=your-database-password
SUPABASE_PROJECT_REF=your-project-reference