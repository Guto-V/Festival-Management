# Festival Management System Environment Variables
# Copy this file to .env and customize for your environment

# =================================================================
# CORE CONFIGURATION
# =================================================================

# Environment (development, production, test)
NODE_ENV=development

# Server port
PORT=3001

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# Database connection (SQLite for dev, PostgreSQL for production)
# SQLite example: sqlite:./festival.db
# PostgreSQL example: postgresql://username:password@localhost:5432/festival_management
DATABASE_URL=sqlite:./festival.db

# Database connection pool settings
DB_MAX_CONNECTIONS=10

# =================================================================
# SECURITY CONFIGURATION
# =================================================================

# JWT secret (MUST be changed for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT expiration time
JWT_EXPIRES_IN=7d

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# =================================================================
# CORS CONFIGURATION
# =================================================================

# Allowed CORS origins (frontend URL)
CORS_ORIGIN=http://localhost:3000

# =================================================================
# EMAIL CONFIGURATION
# =================================================================

# Email service provider (console, sendgrid, ses, etc.)
EMAIL_SERVICE=console

# Email API key (for production)
EMAIL_API_KEY=your-email-api-key

# From email address
EMAIL_FROM=noreply@your-festival.com
EMAIL_FROM_NAME=Festival Management System

# =================================================================
# FILE STORAGE CONFIGURATION
# =================================================================

# Storage type (local, s3)
STORAGE_TYPE=local

# Local storage path
STORAGE_LOCAL_PATH=./uploads

# S3 configuration (for production)
S3_BUCKET=your-s3-bucket
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# =================================================================
# LOGGING CONFIGURATION
# =================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log file path
LOG_FILE=./logs/app.log

# Log rotation settings
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =================================================================
# FEATURE FLAGS
# =================================================================

# Enable/disable features
ENABLE_CONTRACT_SIGNING=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOADS=true

# Maximum upload size (bytes)
MAX_UPLOAD_SIZE=10485760

# =================================================================
# PRODUCTION SPECIFIC
# =================================================================

# Frontend build path (for production)
FRONTEND_BUILD_PATH=./frontend/build

# External service URLs
FRONTEND_URL=https://your-festival-app.com

# Health check configuration
HEALTH_CHECK_TIMEOUT=10000

# =================================================================
# DEVELOPMENT SPECIFIC
# =================================================================

# Enable development tools
ENABLE_DEV_TOOLS=true

# Mock external services
MOCK_EMAIL_SERVICE=true